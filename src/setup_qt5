# setup for Qt5
#
TARGET=$1
UNAME=`uname`
export UNAMEM=`uname -m`
QMAKE=qmake
#
LOCALPATH=
PATHLIST=
#------------------
# Qt 5.12 - 5.14
#------------------
#QTVERSION=5.12.10
#VCVERSION=msvc2017
#MINGWVERSION=mingw73
#------------------
# Qt 5.15 -
#------------------
QTVERSION=5.15.2
VCVERSION=msvc2019
MINGWVERSION=mingw81

case $UNAME in
	CYGWIN*)
		if [ -n "$TARGET" ] ; then
			case $TARGET in
				cygwin)
					QTROOT="/usr"
					QMAKE="qmake-qt5"
					;;
				clean)
					# ignore
					;;
				msvc)
					QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/${VCVERSION}"
					;;
				msvc64)
					QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/${VCVERSION}_64"
					;;
				xp)
					QTVERSION=5.6.3
					QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/msvc2015"
					;;
				*)
					echo "setup_qt5 : Unknown argument : $TARGET"
					exit 1
					;;
			esac
		else
			case $UNAMEM in
			x86_64)
				QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/${MINGWVERSION}_64"
				MINGWROOT="/opt/Qt${QTVERSION}/Tools/${MINGWVERSION}0_64"
				;;
			i686)
				QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/${MINGWVERSION}_32"
				MINGWROOT="/opt/Qt${QTVERSION}/Tools/${MINGWVERSION}0_32"
				;;
			*)
				echo "$0 : Not Support $UNAMEM"
				return;;
			esac
			# Qt5.12 - 5.15
#			QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/${MINGWVERSION}_32"
#			MINGWROOT="/opt/Qt${QTVERSION}/Tools/${MINGWVERSION}0_32"
			# Qt5.9 - 5.11
#			QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/mingw53_32"
#			MINGWROOT="/opt/Qt${QTVERSION}/Tools/mingw530_32"
			# Qt5.6 for XP/Vista
#			QTVERSION=5.6.3
#			QTROOT="/opt/Qt${QTVERSION}/${QTVERSION}/mingw49_32"
#			MINGWROOT="/opt/Qt${QTVERSION}/Tools/mingw492_32"
			# MinGW
			PATHLIST=${MINGWROOT}/bin
			# Coverity Scan
			PATHLIST=/opt/cov-analysis-win64-2019.03/bin:${PATHLIST}
		fi
	;;
	Linux)
		case $UNAMEM in
			x86_64)
				QTROOT=/opt/Qt${QTVERSION}/${QTVERSION}/gcc_64
				# Coverity Scan
				PATHLIST=/opt/cov-analysis-linux64-2019.03/bin:${PATHLIST}
				;;
			i686)
				QTROOT=/opt/Qt5.4.2/5.4/gcc
				;;
			armv6l)
				QTROOT=/usr
				;;
			armv7l)
				QTROOT=/usr
				;;
			*)
				echo "$0 : Not Support $UNAMEM"
				return;;
		esac
		;;
	FreeBSD)
		case $UNAMEM in
			amd64)
				QTROOT=/usr/local/lib/qt5
				;;
			i386)
				QTROOT=/usr/local/lib/qt5
				;;
			*)
				echo "$0 : Not Support $UNAMEM"
				return;;
		esac
		;;
	Darwin)
		case $UNAMEM in
			x86_64)
				QTROOT=/opt/Qt${QTVERSION}/${QTVERSION}/clang_64
				# Coverity Scan
				PATHLIST=/opt/cov-analysis-macosx-2019.03/bin:${PATHLIST}
				;;
			*)
				echo "$0 : Not Support $UNAMEM"
				return;;
		esac
		;;
	*)
		echo "$0 : Not support platform."
		;;
esac

# setup path
PATHLIST=${QTROOT}/bin:${PATHLIST}

IFS=:
for dir in $PATHLIST
do
	if [ -d $dir ]; then
		if [ "${LOCALPATH}" = "" ] ; then
			LOCALPATH="${dir}"
		else
			LOCALPATH="${LOCALPATH}:${dir}"
		fi
	else
		echo no path $dir
	fi
done
IFS=
if [ "${PATH}" = "" ] ; then
	PATH=${LOCALPATH}
else
	PATH=${LOCALPATH}:${PATH}
fi
